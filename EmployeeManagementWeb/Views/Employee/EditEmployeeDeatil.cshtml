@model EmployeeManagementWeb.Models.Employee

@{
    ViewData["Title"] = "EditEmployeeDeatil";
}

<h4>Edit Employee Deatils</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5 ">

            <div class="text-center">
                <h3 class="text-info">Employee Deatils Master Form</h3>
            </div>
            <form asp-action="EditEmployeeDeatil">
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" type="text" class="form-control" placeholder="Enter User Name" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter User Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Enter User Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" type="text" class="form-control" placeholder="Enter User Name" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Designation" class="control-label"></label>
                    <input asp-for="Designation" type="text" class="form-control" placeholder="Enter User Name !" />
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobileNumber" class="control-label"></label>
                    <input asp-for="MobileNumber" type="text" class="form-control" placeholder="Enter User Name !" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" type="text" class="form-control" placeholder="Enter User Name !" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group" style="align-items:center;">
                    <input type="submit" value="Save" class="btn btn-success btn-lg mb-1 float-right" style="margin-left: 466px;" />
                </div>
                <div>
                    <div>
                        <a asp-controller="Account" asp-action="Login">Back to Login</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
